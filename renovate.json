{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "group:allNonMajor"
  ],
  "schedule": [
    "every weekend"
  ],
  "prHourlyLimit": 0,
  "automerge": true,
  "automergeStrategy": "squash",
  "gitIgnoredAuthors": [
    "renovate[bot]@users.noreply.github.com"
  ],
  "reviewers": [
    "rparini"
  ],
  "ignorePaths": [
    "docs/**",
    ".python-version"
  ],
  "automergeType": "branch",
  "pip_requirements": {
    "managerFilePatterns": [
      "/requirements.*\\.txt$/"
    ]
  },
  "packageRules": [
    {
      "description": "Only patch upgrades when updating dependencies for old Python versions",
      "matchPackageNames": ["numpy"],
      "matchCurrentVersion": "<2.3",
      "allowedVersions": "<2.3"
    },
    {
      "description": "Only patch upgrades when updating dependencies for old Python versions",
      "matchPackageNames": ["scipy"],
      "matchCurrentVersion": "<1.16",
      "allowedVersions": "<1.16"
    },
    {
      "groupName": "static analysis dependencies",
      "matchFileNames": [
        "requirements_analysis.txt",
        ".pre-commit-config.yaml"
      ]
    },
    {
      "groupName": "docs dependencies",
      "matchFileNames": [
        "requirements_doc.txt"
      ]
    },
    {
      "groupName": "docs dependencies",
      "matchDepNames": [
        "terminalizer"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/create_docs/"
      ],
      "matchStrings": [
        "npx (?<depName>.*)@(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "npm"
    }
  ],
  "pre-commit": {
    "enabled": true
  }
}
